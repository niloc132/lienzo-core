	<build>
		<plugins>
			<plugin>
				<groupId>com.vertispan.j2cl</groupId>
				<artifactId>j2cl-maven-plugin</artifactId>
				<executions>
					<!--
					in this project we define a j2cl:build, this has two purposes:
					  o  when doing a prod build, we'll get optimized output
					  o  when doing a dev build, j2cl:watch run from the parent will know this is an app, not a library
					-->
					<execution>
						<id>build-js</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>build</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>run</id>
			<build>
				<defaultGoal>tomcat7:run</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>3.1.0</version>
						<executions>
							<execution>
								<id>custom-resources</id>
								<phase>process-resources</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${project.build.directory}</outputDirectory>
									<resources>
										<resource>
											<targetPath>${basedir}/target/webapp</targetPath>
											<directory>src/main/webapp</directory>
											<filtering>true</filtering>
										</resource>
										<resource>
											<targetPath>${basedir}/target/webapp/classes</targetPath>
											<directory>src/main/resources</directory>
											<filtering>false</filtering>
										</resource>
									</resources>
									<encoding>UTF-8</encoding>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.tomcat.maven</groupId>
						<artifactId>tomcat7-maven-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<contextFile>${basedir}/src/main/tomcatconf/context.xml</contextFile>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
